  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/convict": "^6.1.6",
    "@types/node": "^22.13.5",
    "@types/ws": "^8.5.13",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.19.2",
