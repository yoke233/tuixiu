# 后端
DATABASE_URL="postgresql://acp_user:acp_password@localhost:5432/acp_system?schema=public"
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info
JWT_SECRET="<set-a-strong-random-secret>"
COOKIE_SECURE=1
AUTH_ACCESS_TOKEN_TTL_SECONDS=1800
AUTH_REFRESH_TOKEN_TTL_SECONDS=2592000
# CORS（生产建议设置白名单）
CORS_ALLOWED_ORIGINS="https://app.example.com,https://admin.example.com"
AUTH_BOOTSTRAP_TOKEN=""
AUTH_BOOTSTRAP_TOKEN_FILE=""

# Run 工作区/缓存（可选；留空则默认使用 $HOME/.tuixiu/*）
# Linux 示例：WORKSPACES_ROOT="/var/lib/tuixiu/workspaces"
# Windows 示例：WORKSPACES_ROOT="D:\\tuixiu\\workspaces"
WORKSPACES_ROOT=""
REPO_CACHE_ROOT=""
WORKSPACE_TTL_DAYS=7
REPO_CACHE_TTL_DAYS=30
CLEANUP_INTERVAL_SECONDS=3600

# GitLab（可选，MVP 阶段可先留空）
GITLAB_URL="https://gitlab.example.com"
GITLAB_ACCESS_TOKEN=""
GITLAB_PROJECT_ID=""
GITLAB_WEBHOOK_SECRET=""

# GitHub（可选；用于接收 GitHub Webhook 自动导入 Issue）
GITHUB_WEBHOOK_SECRET=""

# Codeup（可选；用于接收云效 Codeup Webhook）
CODEUP_WEBHOOK_SECRET=""

# 消息入口（可选；用于把飞书/企微/Slack 等消息转成 Issue）
MESSAGE_WEBHOOK_SECRET=""

# PM/自动化（阶段 1：自动分析/自动分配/自动启动 Run）
# 开启：PM_AUTOMATION_ENABLED=1
PM_AUTOMATION_ENABLED=""
# 自建大模型（优先兼容 OpenAI API 形态，可留空则默认 https://api.openai.com）
PM_LLM_BASE_URL=""
PM_LLM_MODEL=""
PM_LLM_API_KEY=""
PM_LLM_TIMEOUT_MS=""

# 前端（Vite）
VITE_API_URL="http://localhost:3000/api"
VITE_WS_URL="ws://localhost:3000"
