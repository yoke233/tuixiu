# 后端
DATABASE_URL="postgresql://acp_user:acp_password@localhost:5432/acp_system?schema=public"
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info
JWT_SECRET="<set-a-strong-random-secret>"
COOKIE_SECURE=1
AUTH_ACCESS_TOKEN_TTL_SECONDS=1800
AUTH_REFRESH_TOKEN_TTL_SECONDS=2592000

# CORS（生产建议设置白名单）
CORS_ALLOWED_ORIGINS="https://app.example.com,https://admin.example.com"
AUTH_BOOTSTRAP_TOKEN=""
AUTH_BOOTSTRAP_TOKEN_FILE=""

# Run 工作区/缓存（可选；留空则默认使用 $HOME/.tuixiu/*）
# Linux 示例：WORKSPACES_ROOT="/var/lib/tuixiu/workspaces"
# Windows 示例：WORKSPACES_ROOT="D:\\tuixiu\\workspaces"
WORKSPACES_ROOT=""
REPO_CACHE_ROOT=""
WORKSPACE_TTL_DAYS=7
REPO_CACHE_TTL_DAYS=30
CLEANUP_INTERVAL_SECONDS=3600
