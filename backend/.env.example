DATABASE_URL="postgresql://acp_user:acp_password@localhost:5432/acp_system?schema=public"
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# Run 工作区/缓存（可选；留空则默认使用 $HOME/.tuixiu/*）
# Linux 示例：WORKSPACES_ROOT="/var/lib/tuixiu/workspaces"
# Windows 示例：WORKSPACES_ROOT="D:\\tuixiu\\workspaces"
WORKSPACES_ROOT=""
REPO_CACHE_ROOT=""
WORKSPACE_TTL_DAYS=7
REPO_CACHE_TTL_DAYS=30
CLEANUP_INTERVAL_SECONDS=3600

# 附件存储（Phase 1：仅图片；先落本地，后续可替换为 S3）
# Linux 示例：ATTACHMENTS_ROOT="/var/lib/tuixiu/attachments"
# Windows 示例：ATTACHMENTS_ROOT="D:\\tuixiu\\attachments"
ATTACHMENTS_ROOT=""
ATTACHMENTS_MAX_BYTES=10485760

GITLAB_URL="https://gitlab.example.com"
GITLAB_ACCESS_TOKEN=""
GITLAB_PROJECT_ID=""
GITLAB_WEBHOOK_SECRET=""

# GitHub（可选；用于接收 GitHub Webhook 自动导入 Issue）
GITHUB_WEBHOOK_SECRET=""

# GitHub PR 自动评审（可选；需要同时配置 PM_LLM_* 或 OPENAI_API_KEY）
# 开启：GITHUB_PR_AUTO_REVIEW_ENABLED=1
GITHUB_PR_AUTO_REVIEW_ENABLED=""
GITHUB_PR_AUTO_REVIEW_MAX_FILES=30
GITHUB_PR_AUTO_REVIEW_MAX_PATCH_CHARS=8000

# 消息入口（可选；用于把飞书/企微/Slack 等消息转成 Issue）
MESSAGE_WEBHOOK_SECRET=""

# PM/自动化（阶段 1：自动分析/自动分配/自动启动 Run）
# 开启：PM_AUTOMATION_ENABLED=1
PM_AUTOMATION_ENABLED=""
# 自建大模型（优先兼容 OpenAI API 形态，可留空则默认 https://api.openai.com）
PM_LLM_BASE_URL=""
PM_LLM_MODEL=""
PM_LLM_API_KEY=""
PM_LLM_TIMEOUT_MS=""

# ACP Agent Prompt（可选）
# - 若设置了该变量，会作为平台默认的 Run 提示语（Project.agentWorkspaceNoticeTemplate 若设置会优先使用）；支持模板变量：
#   {{workspace}} {{branch}} {{workspaceMode}} {{repoUrl}} {{scmType}} {{defaultBranch}} {{baseBranch}}
# - 置空可隐藏该提示（例如：AGENT_WORKSPACE_NOTICE_TEMPLATE=""）
AGENT_WORKSPACE_NOTICE_TEMPLATE=""

# Workspace Policy / Execution Profile（可选）
# WORKSPACE_POLICY_DEFAULT 可选值：git/mount/empty/bundle
WORKSPACE_POLICY_DEFAULT=""
# 默认 execution profile key（可选）
EXECUTION_PROFILE_DEFAULT_KEY=""
